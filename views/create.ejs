<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
            
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <form action="/reviewposts/store" method="POST">
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls">
                                <label>Title</label>
                                <input type="text" class="form-control" placeholder="Title" id="title" name="title">
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="Name" id="author" name="author">
                            </div>
                        </div>
                        
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls">
                                <label>Description</label>
                                <textarea type="text" class="form-control" placeholder="Description" id="body" name="body"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn1 btn-primary" id="sendMessageButton">Send</button>
                            <p>　　　</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>
    </body>

</html>